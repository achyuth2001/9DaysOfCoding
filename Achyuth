def squareSum(n):
     
    return int(n*(4*n*n-1)/3)
print('Enter the limit: ')
m=int(input())
print(squareSum(m))

print('Enter the number  of elements in array: ')
k=int(input())
print('Enter the required sum: ')
sum=int(input())
arr=[]
print('Enter the elements to the list:')
for i in range(0,k):
    m=int(input())
    arr.append(m)
count=0
for i in range(0, k):
        for j in range(i + 1, k):
            if arr[i] + arr[j] == sum:
                count += 1
print('the pairs: '+ str(count))

print('Enter a number: ')
n=input()
print('The reverse of '+n+' is '+str(n[::-1]))

def Search(a,v):
   for i in range(len(a)):
      if(a[i]==v):
         return i
   return -1
a=[12,2,23,4,5,46,17,82,9,110]
v=9
b=Search(a,v)
if(b==-1):
   print("Element not present")
else:
   print("Element present at index",b)
   

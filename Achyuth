def rem_vowel(string):
    vowels = ['a','e','i','o','u']
    result = [letter for letter in string if letter.lower() not in vowels]
    result = ''.join(result)
    print(result)
    

n = int(input("Please Enter any Number: "))
s = 0
while(n > 0):
    r = n % 10
    s = s + r
    n = n //10
print('The sum is: '+str(s))

def func(n):
    if n%3==0 and n%5==0:
        print('ZOOM')
    elif n%3==0:
        print('ZIP')
    elif n%5==0:
        print('ZAP')
    else:
        print('INVALID')
j=int(input('Enter the number: '))
func(j)


rows = int(input("Enter the Total Number of Rows  : "))
columns = int(input("Enter the Total Number of Columns  : "))
print('\n')
for i in range(rows):
    for j in range(columns):
        if(i == 0 or i == rows - 1 or j == 0 or j == columns - 1):
            print('*', end = '  ')
        else:
            print(' ', end = '  ')
    print()
print('\t')
print('\t')
print('\n')
print('\n')
print('\n')
for i in range(rows):
    for j in range(columns):
            print('*', end = '  ')
    print()
    
    
    
def count(string):
    u = 0
    l = 0
    s = 0
    n = 0
    for i in range(len(string)):
        if string[i].isupper():
            u += 1
        elif string[i].islower():
            l += 1
        elif string[i].isdigit():
            n += 1
        else:
            s += 1
    print('Upper case letters:', u)
    print('Lower case letters:', l)
    print('Number:', n)
    print('Special characters:', s)
print('enter the string: ')
m=input()
count(m)
